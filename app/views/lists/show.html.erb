<h1><%= @list.name %></h1>
<ul>
<% @list.bookmarks.each do |bookmark| %>
  <li>
  <%= bookmark.comment %>
  <%= link_to bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "This action will delete this Bookmark. Are you sure?"} do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
  </li>
  <% end %>
</ul>


<%= link_to "Add a new Bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
<%= link_to "back to home", lists_path, class:"btn btn-secondary"  %>
